@model IEnumerable<DemoGH_OnTap.Models.Account>

@{
    ViewData["Title"] = "Index";
    var message = ViewData["message"];
}

<h1>Index</h1>
<h2>@message</h2>
<form asp-controller="Account" asp-action="Index" method="get">
    <input type="text" id=" searchInput" name="name" placeholder="NHập chuỗi đi eml" />

</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
